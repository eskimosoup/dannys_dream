<% title Page.model_name.titleize.pluralize %>

<div class="admin_functions">
  <%= link_to "New #{Page.model_name.titleize}", new_admin_page_path %>
</div>

<%= informant_table @pages, {
    :headings => [ :title, ih_order(:slug, 'Link'), '', '', '' ], 
    :body     => [ :title, lambda{|x| link_to page_url(:id => x.slug), page_url(:id => x.slug), :target => "_blank" }, it_edit_images, it_edit, it_destroy ]
  } %>
