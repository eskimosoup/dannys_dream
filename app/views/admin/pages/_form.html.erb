<%= form_for([:admin, @page]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag("Page Layout") do %>
    <!--
    <div class="field">
      <%= f.label :layout %><br />
      <%= f.select :layout, Page.layouts.map{ |x| [t(x), x] } %>
    </div>
    -->
    <%= f.hidden_field :layout, :value => Page.layouts.first %>
    <div class="field">
      <%= f.label :style %><br />
      <%= f.select :style, Page.styles.map{ |x| [t(x), x] } %>
    </div>
  <% end -%>

  <%= field_set_tag("Main Content") do %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, :class => "tinymce" %>
    </div>
  <% end %>

  <fieldset>
    <legend class="clickable" onclick="this.text = $('#seo').is(':visible') ? 'show' : 'hide'; $('#seo').slideToggle()">SEO</legend>
    <div id="seo" style="display:none;">
      <div class="field">
        <%= f.label :meta_description %><br />
        <%= f.text_area :meta_description %>
      </div>
      <div class="field">
        <%= f.label :meta_tags %><br />
        <%= f.text_area :meta_tags %>
      </div>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
