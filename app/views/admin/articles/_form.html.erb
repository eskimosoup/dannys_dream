<%= form_for([:admin, @article]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag("Basic Information") do %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :summary %><br />
      <%= f.text_area :summary %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, :class => "tinymce" %>
    </div>
    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_select :date %>
    </div>
  <% end %>

  <%= field_set_tag("Image") do %>
    <div class="field">
      <%= f.image_field :image %>
    </div>
    <div class="field">
      <%= f.label :image_alt %><br />
      <%= f.text_field :image_alt %>
    </div>
  <% end %>

  <div class="field">
    <%= f.check_box :display %>
    <%= f.label :display %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
