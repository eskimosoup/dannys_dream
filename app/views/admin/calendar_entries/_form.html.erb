<%= form_for([:admin, @calendar_entry]) do |f| %>
  
  <%= f.error_messages %>
  
  <%= field_set_tag("Basic Information") do -%>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_select :date %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
  <% end -%>
  
  <div class="field">
    <%= f.check_box :display %>
    <%= f.label :display %>
  </div>
  
  <br />
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
