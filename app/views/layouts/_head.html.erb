<head>
  <title><%= SITE_SETTINGS['Name'] %><%= raw content_for?(:title) ? " - #{yield(:title)}" : nil %></title>
  <link rel="shortcut icon" href="/favicon.ico" />
  <meta name="description" content="<%= @meta_description || SITE_SETTINGS['Default Meta Description'] %>" />
  <meta name="keywords" content="<%= @meta_tags || SITE_SETTINGS['Default Meta Tags'] %>" />
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head if content_for(:head) %>
</head>
